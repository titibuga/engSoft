# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

#Teste

GET /hue							controllers.Application.teste1()

GET   /monstro/:id          	controllers.Application.mostraMonstro(id: String) 
POST /hue/absorve					controllers.Application.absorve()


POST /hue/treina/:tipo				controllers.Application.treina(tipo: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
