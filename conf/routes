# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.criaHabilidadesIniciais()
GET /geradores						controllers.Application.criaGeradoresIniciais()

#Teste

GET /hue							controllers.Application.teste1()

GET   /monstro/:id          		controllers.Application.mostraMonstro(id: String)

GET /monstro/:id/shop 				controllers.Application.shop(id: String)
GET /monstro/:id/shop2 				controllers.Application.shop2(id: String)
POST /hue/absorve					controllers.Application.absorve()
POST /compra                        controllers.Application.compraDeHabilidade()
POST /compra2						controllers.Application.compraDeGerador()


POST /hue/treina/:tipo				controllers.Application.treina(tipo: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
