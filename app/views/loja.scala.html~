@(monstro: Monstro, habilidades: List[Habilidade])


@import java.math.BigInteger; var i=1;




<html>
  <head>
   </head>
  <body>
    <h1>
      @monstro.getNome()
    </h1>

    @for( hab <- habilidades) {
       <h2>
         @hab.getNome() <br>
         Custo: @hab.getCusto() <br>
         Dano: @hab.getDano() <br><br>
	@(i+=1)
	
	<form action="/hue/treina/str@i" method="post">
      <input type="hidden" name="mId" value="@monstro.getId()" />	
      <input type="submit" name="submit@i" value="Compra" disabled="@monstro.podeComprar(hab)"/>
    </form>
         
       </h2>

    }
  </body>
</html>

